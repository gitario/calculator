<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bisagrasoxidadasyloshijosdelbergantin.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:gravity="right"
        android:layout_marginRight="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_division"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_multiplicacion"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_resta"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_punto"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_igual"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="@dimen/button_text_size"/>
        <Button
            android:id="@+id/btn_suma"
            android:layout_width="0dp"
            android:layout_weight="@dimen/percent_25"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>



</LinearLayout>
